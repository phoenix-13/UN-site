.categories_wrapp>div
  padding 5px
  padding-right 0

.categories_wrapp .whiteframe
  padding 10px
  height 70px
  box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.4)

.categories_wrapp .whiteframe a
  width 100%
  font-size 17px
  color #ffffff
  font-weight bold
  text-decoration none

.categories_wrapp .whiteframe:hover
  box-shadow: 0px 0px 8px 2px rgba(0,0,0,0.5)

.main_article_item
  min-height 30px

.main_article_item i
  margin-right 10px

.unstyled_link
  color #333
  text-decoration none

.unstyled_link:hover
  color #777
  text-decoration none

.category_image img
  width 100%

.single_line_category
  padding-top 15px
  padding-left 20px

.Employment .single_line_category,
.protection .single_line_category
  padding-top 5px

.publication_text_part
  height 53px
  overflow hidden

.participation
  background-color #7E57C2

.protection
   background-color #FFCC33

.health
   background-color #7CB342

.children
   background-color #FF7043

.Employment
  background-color #536DFE

#owl2-slider
  width 100%
  height 300px
  // background-color #A5D6A7
  background-color #f5f8f9

#owl2-slider .item img
  height 300px
  width 300px

.more_btn
  position absolute
  bottom 30px
  right 20px
  color #333

.btn_wrapper
  margin-top -13px
  z-index 100
  position relative
  width 80px
  padding-left 15px

.btn_wrapper .btn
  border none
  border-radius 0
  background-color #e6e6e6
  color rgba(0, 0, 0, 0.5)

.banner_row .banner img
  height 480px
  max-width 100%

.home_map_wrapper
  text-align center

.home_map_wrapper img
  max-width 450px
  padding-top 60px

.Employment .category_image img
  padding-top 10px


.all_publications_btn a
  background-color #ecf0f1
  color #aa1a24
  border-radius 4px
  padding 5px 15px
  text-decoration none

.all_publications_btn a:hover
  text-decoration none
