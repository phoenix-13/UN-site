.categories_wrapp>div
  padding 5px
  padding-right 0

.categories_wrapp .whiteframe
  padding 10px
  height 70px
  box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.4)

.categories_wrapp .whiteframe a
  width 100%
  font-size 17px
  color #ffffff
  font-weight bold
  text-decoration none

.categories_wrapp .whiteframe:hover
  box-shadow: 0px 0px 8px 2px rgba(0,0,0,0.5)

.main_article_item
  min-height 30px

.main_article_item i
  margin-right 10px

.unstyled_link
  color #616668
  text-decoration none

.unstyled_link:hover
  color #aa1a24
  text-decoration none

.main_publications_wrapp .publicatons_delimiter
  border-left 1px solid #aa1a24


.main_publications_wrapp .main_publications:nth-child(3) .publicatons_delimiter
  border-left none

.main_publications .publication_date
  color #888
  font-size 0.8em

.main_publications a
  color #333
  text-decoration none

.main_publications a:hover .title_text
  color #aa1a24
  text-decoration none

.category_image img
  width 100%

.single_line_category
  padding-top 15px
  padding-left 20px

.Employment .single_line_category,
.protection .single_line_category
  padding-top 5px

.publication_text_part
  height 50px
  overflow hidden

.publication_text_part img
  display none

.participation
  background-color #a947ba

.protection
   background-color #f59402

.health
   background-color #66ba69

.children
   background-color #ed5351

.Employment
  background-color #1f93ff




.participation.main_slider_item
  background-color rgba(169, 71, 186, 0.3)

.protection.main_slider_item
   background-color rgba(245, 148, 2, 0.3)

.health.main_slider_item
   background-color rgba(102, 186, 105, 0.3)

.children.main_slider_item
   background-color rgba(237, 83, 81, 0.3)

.Employment.main_slider_item
  background-color rgba(31, 147, 255, 0.3)



#owl2-slider
  width 100%
  height 260px
  background-color #f5f8f9

#owl2-slider .item img
  height 260px
  width 300px

#owl2-slider .owl-dots .owl-dot span
  background #d48a92

#owl2-slider .owl-dots .owl-dot.active span
  background #aa1a24

.more_btn button
  position absolute
  bottom 20px
  right 20px
  color #ffffff
  background rgba(0,0,0,0.4)
  border-radius 3px

.more_btn span
  font-weight bold
  font-size 15px

.more_btn:hover
  color #ffffff

.btn_wrapper
  margin-top -65px;
  z-index 100
  position relative
  width 80px
  padding-left 22px

.btn_wrapper .btn
  border none
  border-radius 0
  background-color transparent
  color #ffffff

.btn_wrapper .btn:active,
.btn_wrapper .btn:focus
  background-color transparent
  outline none
  border none

.banner_row .banner img
  height 450px
  max-width 100%

.home_map_wrapper
  text-align center

.home_map_wrapper img
  max-width 450px
  padding-top 60px

.Employment .category_image img
  padding-top 10px


.all_publications_btn a
  background-color #aa1a24
  color #ffffff
  border-radius 4px
  padding 5px 15px
  text-decoration none
  font-size 13px

.all_publications_btn a:hover
  text-decoration none

.publications_con_wrapp
  background-color #fafafa

.publications_container
  width 1000px
  margin 0 auto

.banner_wrapp
  background-color #ededed

.banner_row
  width 1000px
  margin 0 auto

.home_map_wrapp fc-chart .raphael-group-1-background rect
  fill #ededed !important

.banner_row .page_title a
  color #aa1a24
  text-decoration none
  font-size 1.4em

.banner_row .page_title hr
  border-color #aa1a24
  margin-top 5px

.publications_btn
  background-color #aa1a24 !important
  color #ffffff !important
