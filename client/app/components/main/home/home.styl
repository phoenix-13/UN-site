.categories_wrapp>div
  padding 5px
  padding-right 0

.categories_wrapp .whiteframe
  padding 10px
  height 70px
  box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.4)

.categories_wrapp .whiteframe a
  width 100%
  font-size 17px
  color #ffffff
  font-weight bold
  text-decoration none

.categories_wrapp .whiteframe:hover
  box-shadow: 0px 0px 8px 2px rgba(0,0,0,0.5)

.main_article_item
  min-height 30px

.main_article_item i
  margin-right 10px

.unstyled_link
  color #333
  text-decoration none

.unstyled_link:hover
  color #777
  text-decoration none

.category_image img
  width 100%


.single_line_category
  padding-top 15px
  padding-left 20px


.double_line_category
  padding-top 5px
  padding-left 20px


.publication_text_part
  height 53px
  overflow hidden


.participation
  background-color #7E57C2

.protection
   background-color #FFCC33

.health
   background-color #7CB342

.youth
   background-color #F4511E

.education
  background-color #2196F3


#owl2-slider
  width 100%
  height 300px


#owl2-slider .item img
  height 300px
  width 300px

.more_btn
  position absolute
  bottom 30px
  right 20px

.btn_wrapper .btn
  border none
  border-radius 0
  background-color #e6e6e6
  color #333


.banner_row .banner img
  height 480px
  max-width 100%
