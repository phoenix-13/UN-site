.single_page_content
  padding-left 15%
  padding-right 15%
  padding-top 30px
  padding-bottom 30px

.single_page_content .page_title
  color #b42323
  font-size 1.2em

.single_page_content .navigation a,
.single_page_content .navigation
  color #b42323
  font-size 0.9em
  font-weight normal

.single_page_content .navigation a:hover
  text-decoration none

.single_page_content .contact_label
  color #b42323 !important
  font-size 0.9em

.single_page_content .md-input
  border-color #b42323 !important

.md-input-container:not(.md-input-invalid).md-input-focused label.contact_label
  color #b42323

.contact_form .send_btn
  background-color #e2e2e2
  color #b42323 !important

.contact_map_wrapper
  height 250px
  margin-bottom 30px

.contact_info_wrapp
  position absolute
  z-index 100
  margin-left 15%
  margin-top 30px

.contact_info_wrapp .contact_info
  min-height 70px
  min-width 350px
  background-color rgba(255, 255, 255, .8)

.space_separator
  height 15px

