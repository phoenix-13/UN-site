.single_page_content
  padding-top 20px
  padding-bottom 30px
  width 1024px
  margin 0 auto

.single_page_content .page_title
  color #b42323
  font-size 1.2em

.single_page_content .navigation a,
.single_page_content .navigation
  color #b42323
  font-size 0.9em
  font-weight normal

.single_page_content .navigation a:hover
  text-decoration none

.single_page_content .contact_label
  color #b42323 !important
  font-size 0.9em

.single_page_content .md-input
  border-color #b42323 !important

.md-input-container:not(.md-input-invalid).md-input-focused label.contact_label
  color #b42323

.contact_form .send_btn
  background-color #e2e2e2
  color #b42323 !important

.contact_map_wrapper
  height 250px

.contact_info_wrapp
  position absolute
  z-index 100
  margin-left 15%
  margin-top 30px

.contact_info_wrapp .contact_info
  min-height 70px
  min-width 350px
  background-color rgba(255, 255, 255, .9)
  box-shadow: 0px 0px 8px 2px rgba(0,0,0,0.6)

.space_separator
  height 15px

.contact_inputs
  width: 49%;
  float: left;
  padding-right: 1%;

.contact_inputs h3
  width: 100%;
  text-align: left;
  font-size: 13px;

.contact_inputs input
  width: 94%;
  height: 38px;
  background-color: #dce0df;
  border-radius: 3px;
  border: none;
  outline: none;
  padding-left: 10px;
  padding-right: 10px;

.contact_note
  width: 49%;
  float: right;
  padding-left: 1%;

.contact_note h3
  width: 100%;
  text-align: left;
  font-size: 13px;
  padding-bottom: 7px;
  padding-top: 23px;

.contact_note textarea
  width: 100%;
  background-color: #dce0df;
  padding-left: 2%;
  padding-right: 2%;
  border-radius: 3px;
  outline: none;
  height: 173px;
  resize: none;
  border: none;

.unstyled_list
  list-style none

.contact_info
  color #777

.contact_info .title_text
  color: #333

.single_page_content .page_title a
  color inherit
  text-decoration none

.single_page_content .page_title hr
  border-color #b42323
  margin-top 5px
